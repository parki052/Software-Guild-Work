@model SG_Dealership.Models.UsersVM
<div>
    <h2>Users</h2>
    @Html.ActionLink("Add a new User", "AddUser", "Admin", null, new { @class ="btn btn-default"})
    <p style="padding:7px"></p>
    <table class="table table-bordered table-striped">
        <thead>
            <tr>
                <th>Last Name</th>
                <th>First Name</th>
                <th>Email</th>
                <th>Role</th>
                <th></th>
            </tr>
        </thead>
        <tbody>
            @foreach (var user in Model.AllUsers)
            {
                <tr>
                    <td>@user.LastName</td>
                    <td>@user.FirstName</td>
                    <td>@user.Email</td>
                    <td>@user.RoleName</td>
                    <td>
                        @Html.ActionLink("Edit", "EditUser", "Admin", new { id = user.UserId }, null)
                    </td>
                </tr>
            }
        </tbody>
    </table>
</div>