@model SG_Dealership.Models.PurchaseVM

<h3>Purchase Vehicle</h3>
<hr />
<div class="row" style="border:solid; border-color:gray; padding:10px">
    <div class=" row">
        <div class="col col-md-3">

            <h3><b>@Model.Vehicle.Year @Model.Vehicle.ModelType.Maker.Name @Model.Vehicle.ModelType.Name</b></h3>
            @if (Model.Vehicle.PicturePath != null)
            {
                <img src="@Url.Content(@Model.Vehicle.PicturePath)" width="150" height="150" />
            }
        </div>
        <div class="col col-md-3">
            <br /><br />
            <ul>
                <li style="padding:8px"><b>Body Style:</b> @Model.Vehicle.BodyStyle.Name</li>
                <li style="padding:8px"><b>Trans:</b> @Model.Vehicle.Trans.Name</li>
                <li style="padding:8px"><b>Color:</b> @Model.Vehicle.ExteriorColor.Name</li>
            </ul>
        </div>
        <div class="col col-md-3">
            <br /><br />
            <ul>
                <li style="padding:8px"><b>Interior:</b> @Model.Vehicle.InteriorColor.Name</li>
                <li style="padding:8px"><b>Mileage:</b> @Model.Vehicle.Mileage</li>
                <li style="padding:8px"><b>VIN:</b> @Model.Vehicle.VIN</li>
            </ul>
        </div>
        <div class="col col-md-3">
            <br /><br />
            <ul>
                <li style="padding:8px"><b>Sale Price:</b> $@Model.Vehicle.SalePrice</li>
                <li style="padding:8px"><b>MSRP:</b> $@Model.Vehicle.MSRP</li>
            </ul>
        </div>
    </div>

    <hr style="border-color:black" />
    <h3 style="text-align:center"><b>Details:</b></h3>
    <p style="text-align:center">@Model.Vehicle.Description</p>

</div>
@using (Html.BeginForm())
{
    @Html.HiddenFor(m => m.Vehicle.Id)

    <div class="row">
        <h2 style="padding-top:5px">Sales Information</h2>
        <span class="text text-danger">@Html.ValidationSummary()</span>
        <div class="col col-md-4 ">

            <div class="form-group">
                <label>Name</label>
                @Html.TextBoxFor(m => m.Name, new { @class = "form-control" })
            </div>
            <div class="form-group">
                <label>Email</label>
                @Html.TextBoxFor(m => m.Email, new { @class = "form-control" })
            </div>
            <div class="form-group">
                <label>Street 1</label>
                @Html.TextBoxFor(m => m.Street1, new { @class = "form-control" })
            </div>
            <div class="form-group">
                <label>City</label>
                @Html.TextBoxFor(m => m.City, new { @class = "form-control" })
            </div>
            <div class="form-group">
                <label>Zipcode</label>
                @Html.TextBoxFor(m => m.Zipcode, new { @class = "form-control" })
            </div>
        </div>
        <div class="col col-md-4 " style="float:none; margin:0 auto">
            <div class="form-group">
                <label>Phone</label>
                @Html.TextBoxFor(m => m.Phone, new { @class = "form-control" })
            </div>
            <div class="form-group">
                <label>Street 2</label>
                @Html.TextBoxFor(m => m.Street2, new { @class = "form-control" })
            </div>
            <div class="form-group">
                <label>State</label>
                @Html.DropDownListFor(m => m.SelectedStateId, Model.AllStates, new { @class = "form-control" })
            </div>
        </div>
    </div>
    <div class="row">
        <hr style="border-color:black;" />
        <div class="col col-md-4">
            <div class="form-group">
                <label>Purchase Price</label>
                @Html.TextBoxFor(m => m.PurchasePrice, new { @class = "form-control" })
            </div>
            <button type="submit" class="btn btn-primary">Save</button>
        </div>
        <div class="col col-md-4 " style="float:none; margin:0 auto">
            <div class="form-group">
                <label>Purchase Type</label>
                @Html.DropDownListFor(m => m.SelectedPurchaseTypeId, Model.AllPurchaseTypes, new { @class = "form-control" })
            </div>
        </div>
    </div>
}
